        <script src="../../vendors/typeahead.js/typeahead.bundle.min.js"></script>
        <script src="../../vendors/select2/select2.min.js"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="../../js/off-canvas.js"></script>
        <script src="../../js/hoverable-collapse.js"></script>
        <script src="../../js/template.js"></script>
        <script src="../../js/settings.js"></script>
        <script src="../../js/todolist.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page-->
        <script>
            const input = document.querySelector("#inlineFormInputName2");
            const btn = document.querySelector(".btn");
            const xhttp = new XMLHttpRequest();
            const alrt_box = document.querySelector(".alert >strong");
            const alrt_box_cont = document.querySelector(".alert");

            function findDupInDb() {
                if (alrt_box.innerText == "") {
                    alrt_box_cont.style.opacity = '0';
                } else {
                    alrt_box_cont.style.transition = '0.5s'
                    alrt_box_cont.style.opacity = '1';
                    setTimeout(function() {
                        alrt_box.innerText = "";
                        alrt_box_cont.style.opacity = '0';
                    }, 5000);
                }
            };
            btn.addEventListener('click', function(e) {
                if (input.value === '') {
                    alrt_box_cont.style.transition = '0.5s'
                    alrt_box_cont.style.opacity = '1';
                    setTimeout(function() {
                        alrt_box.innerText = "";
                        alrt_box_cont.style.opacity = '0';
                    }, 5000);
                    e.preventDefault();
                }
            });
            findDupInDb
            window.onload = findDupInDb();
        </script>
        <script src="../../js/file-upload.js"></script>
        <script src="../../js/typeahead.js"></script>
        <script src="../../js/select2.js"></script>
        <!-- End custom js for this page-->
</body>

</html>