<body>
    <!-- partial:../../partials/_sidebar.html -->
    <%- include("../../includes/dashboard_include/navbar.ejs")  %>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="alert alert-danger">
                                <strong><%= error %> </strong>
                                <p>
                                    <%=errorDesc %>
                                </p>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Book</h4>
                                <p class="card-description">
                                    Upload book posts
                                </p>
                                <form class="forms-sample" enctype="multipart/form-data" action='/crbks' method="post">
                                    <div class="form-group">
                                        <label for="exampleInputName1">Title</label>
                                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" name="title">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputCity1">Description</label>
                                        <input type="text" class="form-control" id="exampleInputCity1" placeholder="Description" name="desc">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputCity1">Author</label>
                                        <input type="text" class="form-control" id="exampleInputCity1" placeholder="Description" name="auth">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputCity1">Isbn</label>
                                        <input type="text" class="form-control" id="exampleInputCity1" placeholder="Description" name="Isbn">
                                    </div>
                                    <div class="form-group">
                                        <label>File upload</label>
                                        <input type="file" name="book" class="file-upload-default">
                                        <div class="input-group col-xs-12">
                                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Books">
                                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                              </span>
                                        </div>
                                        <div class="form-group">
                                            <label>File upload cover book</label>
                                            <input type="file" name="c_book" class="file-upload-default">
                                            <div class="input-group col-xs-12">
                                                <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Book Cover photo">
                                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                                  </span>
                                            </div>
                                    </div>
                                    <!-- <div class="form-group">
                                        <label for="exampleTextarea1">Body</label>
                                        <textarea class="form-control" id="exampleTextarea1" rows="10" name="body"></textarea>
                                    </div> -->
                                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                    <button class="btn btn-light">Cancel</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            <%- include("../../includes/dashboard_include/footer.ejs")  %>
                <!-- partial -->
        </div>
        <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
        </div>
        <!-- container-scroller -->
        <!-- plugins:js -->
        <script src="../../vendors/js/vendor.bundle.base.js"></script>
