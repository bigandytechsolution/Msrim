        <!-- Custom js for this page-->
        <script src="../../js/file-upload.js"></script>
        <script src="../../js/typeahead.js"></script>
        <script src="../../js/select2.js"></script>
        <script>
            const input = document.querySelector("#inlineFormInputName2");
            const btn = document.querySelector(".btn");
            const xhttp = new XMLHttpRequest();
            const alrt_box = document.querySelector(".alert >strong");
            const alrt_box_cont = document.querySelector(".alert");

            function findDupInDb() {
                if (alrt_box.innerText == "") {
                    alrt_box_cont.style.opacity = '0';
                } else {
                    alrt_box_cont.style.transition = '0.5s'
                    alrt_box_cont.style.opacity = '1';
                    setTimeout(function() {
                        alrt_box.innerText = "";
                        alrt_box_cont.style.opacity = '0';
                    }, 5000);
                }
            };
            btn.addEventListener('click', function(e) {
                if (input.value === '') {
                    alrt_box_cont.style.transition = '0.5s'
                    alrt_box_cont.style.opacity = '1';
                    setTimeout(function() {
                        alrt_box.innerText = "";
                        alrt_box_cont.style.opacity = '0';
                    }, 5000);
                    e.preventDefault();
                }
            });
            findDupInDb
            window.onload = findDupInDb();
        </script>
        <!-- End custom js for this page-->
        <!--fetch departments from database-->
        <script>
            const select = document.querySelector("#sel");
            const select_position = document.querySelector("#sel2");

            function fetchData() {
                const xhttp = new XMLHttpRequest();
                let fromJson;
                let createOptionElement;
                let createOptionElement2;
                xhttp.onreadystatechange = function() {
                    if (this.readyState == 4 && this.status == 200) {
                        // console.log("output:-" + this.responseText);
                        // select.options.add(this.responseText);
                        fromJson = JSON.parse(this.responseText);
                        // console.log(fromJson.dep);
                        // console.log(fromJson.dep.length)
                        for (let index = 0; index < fromJson.dep.length; index++) {
                            createOptionElement = document.createElement("option");
                            createOptionElement.innerText = fromJson.dep[index].dp_name;
                            // console.log(createOptionElement);
                            // console.log(fromJson[index].id);
                            select.options.add(createOptionElement);
                            for (let index = 0; index < fromJson.pos.length; index++) {
                                createOptionElement2 = document.createElement("option");
                                createOptionElement2.innerText = fromJson.pos[index].name;
                                // console.log(createOptionElement);
                                // console.log(fromJson[index].id);
                                select_position.options.add(createOptionElement2);
                            }
                        }
                    } else {
                        console.log("error:-" + this.statusText);
                    }
                };
                xhttp.open("GET", "/g_AllData", true);
                xhttp.send();
            }
            fetchData();
        </script>
</body>

</html>