        <!--fetch departments from database-->
        <script>
            const select = document.querySelector("#sel");
            console.log(select);
            console.log(select.options);

            function fetchData() {
                const xhttp = new XMLHttpRequest();
                let fromJson;
                let createOptionElement;
                xhttp.onreadystatechange = function() {
                    if (this.readyState == 4 && this.status == 200) {
                        console.log("output:-" + this.responseText);
                        // select.options.add(this.responseText);
                        fromJson = JSON.parse(this.responseText);
                        console.log(fromJson.length);
                        for (let index = 0; index < fromJson.length; index++) {
                            createOptionElement = document.createElement("option");
                            createOptionElement.innerText = fromJson[index].dp_name;
                            console.log(createOptionElement);
                            // console.log(fromJson[index].id);
                            select.options.add(createOptionElement);
                        }
                    } else {
                        console.log("error:-" + this.statusText);
                    }
                };
                xhttp.open("GET", "/g_apd", true);
                xhttp.send();
            }
            fetchData();
        </script>
</body>

</html>