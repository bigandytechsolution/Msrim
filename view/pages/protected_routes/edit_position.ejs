            <script>
                const input = document.querySelector("#inlineFormInputName2");
                const btns = document.querySelector(".d");
                // const xhttp = new XMLHttpRequest();
                const alrt_box = document.querySelector(".alert >strong");
                const alrt_box_p = document.querySelector(".alert >p");
                const alrt_box_cont = document.querySelector(".alert");
                alrt_box_cont.style.opacity = '0';
                input.onpointerleave = function() {
                    window.location.reload();
                }
                const requestOptions = {
                    method: 'put',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        "fname": input.value
                    }),
                    redirect: 'manual',
                };

                function Update() {
                    const req_params = window.location.pathname;
                    console.log(`/ed/${req_params.replace('/ed/',' ').trim()}`);
                    fetch(`/ed/${req_params.replace('/ed/',' ').trim()}`, requestOptions).then(function(response) {
                        // response.json();
                    }).then(function(data) {
                        // console.log(data);
                        // data.dp_name = input.value;
                    }).catch(error => {
                        console.log(error);
                    });
                };
                btns.addEventListener('click', function(event) {
                    // window.location.reload();
                    if (input.value === "") {
                        event.preventDefault();
                        alrt_box_cont.style.transition = '0.5s'
                        alrt_box_cont.style.opacity = '1';
                        alrt_box.innerText = "Invalid Input";
                        alrt_box_p.innerText = "Your update name field is empty";
                        setTimeout(function() {
                            alrt_box_cont.style.opacity = '0';
                        }, 5000);
                    } else {
                        Update();
                        setTimeout(function() {
                            window.location.href = "/vd";
                            // alert(1)
                        }, 200);
                    }
                })
            </script>

